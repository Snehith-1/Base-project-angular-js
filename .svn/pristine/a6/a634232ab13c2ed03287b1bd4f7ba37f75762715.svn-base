<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" href="app/css/bootstrap.css" />
    <link rel="stylesheet" href="app/js/popper.js"/>
    <script src="app/js/bootstrap.js"></script>
    <link rel="stylesheet" href="app/css/w3.css" />
    <link rel="stylesheet" href="app/css/vendorportal.css" />
    <style type="text/css">
        body {
            background-image: url('app/img/login.jpg');
            background-repeat: no-repeat;
        }
    </style>
</head>
<body class="bodyclass">
    <div class="container" ng-controller="vendorlogin">
        <div class="row">
            <div class="form_bg">
                <form name="loginform" novalidate="" class="form-validate mb-lg" autocomplete="off">
                    <img src="app/img/logo_new.jpg" style="height:140%;width:100%"
                         alt="Image" class="block-center img-rounded" />
                    <h2 class="text-center">Application Portal</h2>
                    <br />
                    <div class="form-group">
                        <input type="text" ng-model="userCode" class="form-control" name="userid" placeholder="User Code" required="" />
                    </div>
                    <div class="form-group">
                        <input type="password" ng-model="passWord" class="form-control" name="pwd" placeholder="Password" required="" />
                    </div>
                    <br />
                    <div class="align-center">
                        <button type="submit" ng-disabled="loginform.$invalid" class="btn btn-labeled btn-success" id="login" ng-click="login()">
                            <span class="btn-label btn-label-left"><i class="fa fa-sign-in"></i></span><b>Login</b>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
