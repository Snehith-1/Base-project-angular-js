 <h3>
     Allocation Management
 </h3>
<div ng-controller="rmTransfercontroller">
    <div class="panel">
        <div class="panel-body">
            <div class="table-responsive">
                <table datatable="ng" class="row-border hover">
                    <thead>
                        <tr class="bg-primary-light text-white">
                            <th>S.No</th>
                            <th class="text-nowrap">Assigned RM</th>
                            <th class="text-nowrap">State</th>
                            <th class="text-nowrap">District</th>
                            <th class="text-nowrap">Allocation Count</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="data in RMallocation">
                            <td data-title="'S.No'">{{$index+1}}</td>
                            <td data-title="'Assigned RM'">{{data.assigned_RM}}</td>
                            <td data-title="'State'">{{data.state_name}}</td>
                            <td data-title="'District'">{{data.district_name}}</td>
                            <td data-title="'Allocation Count'">{{data.count_RMassigned}}</td>
                            <td class="text-nowrap">
                                <button title="View" class="btn btn-info btn-sm"
                                        ng-click="transferRMdtl(data.assignedRM_gid)">
                                    <em class="fa fa-eye"></em>
                                </button>
                                
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>