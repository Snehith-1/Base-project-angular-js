<h3>
    Raise Request
</h3>
<style>
    .picColor:hover {
       background-color: transparent;
       box-shadow: none;
       color: #144A6E;
       border: 1px solid #A59F9D;
       transform: translateY(-3px);
       box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
       text-decoration: underline;
       text-decoration-color: #141478;
    }
    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f8f7f7;
        height:48px;  
    }

    /* Style the buttons inside the tab */
    .tab button {
        background-color: inherit;
        float: left;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 14px 16px;
        transition: 0.3s;
        font-size: 14px;
        font-weight: bold;
    }

    /* Change background color of buttons on hover */
    .tab button:hover {
        background-color: rgb(226, 221, 221);       
        text-decoration: underline;
        height:56px;
    }

    /* Style the tab content */
    .tabcontent {
       display: none;
       padding: 6px 12px;
       border: 1px solid #fff;
       border-top: none;
    }
    .tab button.active {
        background-color: #d5591e;
        background-image: linear-gradient(316deg, rgb(236 195 100) 0%,  rgb(171 225 166) 74%);
    }

</style>
<script>
    function openRequests(evt, RequestsName) {
      var i, tabcontent, tablinks;
      tabcontent = document.getElementsByClassName("tabcontent");
      for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
      }
      tablinks = document.getElementsByClassName("tablinks");
      for (i = 0; i < tablinks.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" active", "");
      }
      document.getElementById(RequestsName).style.display = "block";
      evt.currentTarget.className += " active";
    }
    
    // Get the element with id="defaultOpen" and click on it
    document.getElementById("defaultOpen").click();
    
</script>  
<div ng-controller="MstHRLoanRaiseRequestCompletedController">
    <div class="row">
        <br />
        <div class="col-lg-2 col-md-2 col-sm-2">
            <div class="row">
                <div class="col-lg-3 col-md-7 col-sm-12">               
                    <button type="button" title="Raise new request " class="btn btn-info btn-sm" ng-click="addrequest()">
                        <span class="btn-label">
                            <i class="fa fa-plus"></i>
                        </span> Raise new request
                    </button>
                </div>
            </div>
        </div>
        <div class="col-lg-10 col-md-10 col-sm-10">
            <div class="row">
                <div class="col-lg-10 col-md-10 col-sm-10">
                    <div class="tab nowrap">
                        <button class="tablinks" ng-click="PendingRequests()" style="color:#141478;font-size:13px"> 
                            <em class="fa fa-user fa-x" style="color:#141478;font-size: 15px;"></em> &nbsp; Pending Request
                            &nbsp; <div class="pull-right label" style="background-color:#141478;padding-top:4px;font-size: 13px;padding-bottom:4px;">{{lspendingrequests_count}}</div>
                        </button>
                        <button class="tablinks" onclick="openRequests(event, 'Completed Requests')" id="defaultOpen" ng-click="completed_Requests()" style="color:#00796b;font-size:13px">
                            <em class="fa fa-check-square-o" style="color:#00796b;font-size: 15px;"></em> &nbsp; Completed Request
                            &nbsp; <div class="pull-right label" style="background-color:#00796b;padding-top:4px;font-size:13px;padding-bottom:4px;">{{lscompletedrequests_count}}</div>
                        </button> 
                        <button class="tablinks" ng-click="Rejected_Requests()" style="color:#FF0000;font-size:13px"> 
                            <em class="fa icon-close fa-x" style="color:#FF0000;font-size: 15px;"></em> &nbsp; Rejected Request 
                            &nbsp; <div class="pull-right label" style="background-color:#FF0000;padding-top:4px;font-size: 13px;padding-bottom:4px;">{{lsrejectedrequests_count}}</div>
                        </button> 
                        <button class="tablinks" ng-click="withdrawn_Requests()" style="color:#1976d2;font-size:13px"> 
                            <em class="fa fa-arrow-left fa-x" style="color:#1976d2;font-size: 15px;"></em> &nbsp; Withdrawn Request 
                            &nbsp; <div class="pull-right label" style="background-color:#1976d2;padding-top:4px;font-size: 13px;padding-bottom:4px;">{{lswithdrawn_count}}</div>
                        </button>                                   
                    </div>
                </div>
                <div class="col-lg-2 col-sm-2 col-md-2">
                    <div class="list-group-item picColor" style="height:50px;">
                        <div class="media-box">
                            <div class="media-box-body clearfix">
                                <div class="media-box-heading" style="padding-top:4px;">
                                    <div class="pull-right label" style="background-color:#C10B68;padding-top:4px;padding-bottom:4px;font-size:13px;">{{lstotalcount}}</div>
                                    <div style="font-size:14px;color:#C10B68;"><b> Total Request </b></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>            
    </div>
    <br />
    <div class="panel" id="Completed Requests">
        <br />
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="table-responsive">
                        <table datatable="ng" class="table table-hover table-striped">
                            <thead>
                                <tr class="text-white" style="background-color:#09385f;">
                                    <th> S.No </th>                                    
                                    <th> Reference Number </th>
                                    <th> Created Date </th>                                   
                                    <th> Role</th>
                                    <th> Department</th>
                                    <th> Type of Financial Assistance</th>
                                    <th> Amount </th>
                                    <th> Approval Status</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                               <tr ng-repeat="data in hrloanrequestSummary_list">
                                    <td>{{$index+1}}</td>                                    
                                    <td>{{data.request_refno}}</td>
                                    <td>{{data.created_date}}</td>                                 
                                    <td>{{data.employee_role}}</td>
                                    <td>{{data.department_name}}</td>
                                    <td>{{data.fintype_name}}</td>
                                    <td>{{data.amount}}</td>
                                    <td>{{data.request_status}}</td>
                                    <td class="nowrap" data-title="'Action'" style="text-align: center;">
                                        <button title="View" ng-click="viewrequests(data.request_gid)" class="btn btn-info">
                                            <em class="fa fa-eye"></em>
                                        </button>                                      
                                    </td>
                                </tr>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
        <br />
    </div>
    <br>
   
</div>
