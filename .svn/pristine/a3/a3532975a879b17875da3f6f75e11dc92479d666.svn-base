
    <h3>
        Loan Details
        
    </h3>
    <div ng-controller="MstRMLoanDetailsDtlsController">
        <div class="panel">
          
            <br />
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="table-responsive">
                            <table datatable="ng" class="table table-hover table-striped">
                                <thead>
                                    <tr class="text-white" style="background-color:#09385f;">
                                        <th class="nowrap"> S.No </th>
                                        <th class="nowrap"> Customer Name</th>
                                        <th class="nowrap"> Stackholder Type</th>
                                        <th class="nowrap"> CompanyType</th>
                                        <th class="nowrap"> URN </th>
                                        <th class="nowrap"> LAN </th>
                                        <th class="nowrap"> Account Status </th>
                                        <th class="nowrap"> Ledger balance </th>
                                        <th class="nowrap"> Effective  OD Days</th>
                                        <th class="nowrap"> Maximum OD Days </th>
                                        <th class="nowrap"> RBI OD Days </th>
                                        <th class="nowrap"> Net Pay Off </th>
                                        <th class="nowrap"> Vertical </th>
                                        <th class="nowrap"> Next Due Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="data in loandetails_list">
                                        <td data-title="'S.No'"> {{$index+1}} </td>
                                        <td data-title="'Customer Name'"> {{data.customer_name}} </td>
                                        <td data-title="'Stackholder Type'"> {{data.stackholder_type}} </td>
                                        <td data-title="'Type'"> {{data.company_type}} </td>
                                        <td data-title="'URN'"> {{data.urn}} </td>
                                        <td data-title="'LAN'"> {{data.lan}} </td>
                                        <td data-title="'Account Status'"> {{data.account_status}} </td>
                                        <td data-title="'Ledger balance'" style="text-align: right;"> {{data.ledger_balance}} </td>
                                        <td data-title="'Effective  OD Days'" style="text-align: right;"> {{data.rpa}} </td>
                                        <td data-title="'Maximum OD Days'"> {{data.maximum_od_day}} </td>
                                        <td data-title="'RBI OD Days'"> {{data.rbi_od_days}} </td>
                                        <td data-title="'Moratorium Tenure '" align="right"> {{data.Net_Payoff_Amt}} </td>
                                        <td data-title="'Vertical'"> {{data.vertical}} </td>
                                        <td data-title="'Next Due Date"> {{data.next_due_date}} </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        </div>
        <br>
        <div class="row">
            <div ng-hide="lspagetype =='CAD_Pending' || lspagetype=='CAD_Accepted'" class="text-center">
                <button ng-click="Back()" class="btn btn-info"><i class="fa fa-arrow-circle-left"></i>&nbsp;&nbsp;Back</button>
            </div>
            <div ng-show="lspagetype =='CAD_Pending' || lspagetype=='CAD_Accepted'" class="text-center">
            <button type="button" title="Window Close" class="btn btn-danger" ng-click="close()">
                <i class="fa icon-close">&nbsp;&nbsp;</i>Close
            </button>
             </div>
            <br />
        </div>
    </div>