<h3>
    Checker Details
</h3>
<div ng-controller="isanMstcheckeraddinfoController as dp">

    <div id="panelDemo8" class="panel panel-primary ">
        <div class="panel-heading">
            <span class="btn-label">
                <i class="fa fa-plus"></i>
            </span>Add Checker
        </div>

        <div class="panel-body">
            <div class="row">
                <div class="col-sm-8 col-sm-8 col-sm-8 ">
                    <label>Checker Name </label> <span style="color:red">*</span>
                    <select name="employee" chosen="" ng-options="m.checker_name for m in checker_list" required
                            ng-model="checkergid" class="chosen-select form-control"
                            ng-change="onselectedchangechecker(checker)">
                        <option value=""> ----Select Checker----</option>
                    </select>

                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-sm-8 col-sm-8 col-sm-8 ">

                    <label><strong>Checker Code</strong> <span style="color:red"></span></label>
                    <input type="text" ng-model="checker_code" maxlength="512" tabindex="0" class="form-control" required
                           id="checker_code">

                </div>
            </div>
            <br />

            <div class="row">

                <div class="col-lg-8 col-md-8 col-sm-8">
                    <label><strong>Checker Mail Id</strong> <span style="color:red"></span></label>
                    <input type="text" ng-model="checker_mailid" maxlength="512" tabindex="0" class="form-control" required
                           id="checker_mailid">

                </div>
            </div>
            <br />

            <div>
                <div class="text-center">
                    <button type="button" class="btn btn-success btn-md" ng-disabled="userform.$invalid" ng-click="checkerSubmit()"><i class="fa fa-arrow-circle-right"></i>&nbsp;&nbsp;Submit</button>&nbsp;&nbsp;
                    <button ng-click="checkerback()" class="btn btn-info"><i class="fa fa-arrow-circle-left"></i>&nbsp;&nbsp;Back</button>
                </div>
            </div>

        </div>

    </div>

</div>