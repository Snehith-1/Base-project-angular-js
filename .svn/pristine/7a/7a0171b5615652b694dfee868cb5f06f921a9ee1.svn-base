
<h3>
    CC Group Name
</h3>
<div ng-controller="ccgroupsummarycontroller">
    <div>
        <button type="button" title="Add Security Type" class="btn btn-info btn-sm" ng-click="popupgroup()">
            <span class="btn-label">
                <i class="fa fa-plus"></i>
            </span>ADD CC group
        </button>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-12">
            <!-- START panel-->
            <div id="panelDemo13" class="panel panel-default">
                <div class="panel-body table-responsive">
                    <table datatable="ng" class="row-border hover">
                        <thead>
                            <tr class="bg-primary-light text-white">
                                <th>S.No</th>
                                <th> One API Code</th>
                                <th>CC Group Code</th>
                                <th>CC Group Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="data in ccgroup_list">
                                <td data-title="'S.No'">{{$index+1}}</td>
                                <td data-title="'One API Code'">{{data.api_code}}</td>
                                <td data-title="'CC Group Code'">{{data.ccgroup_code}}</td>
                                <td data-title="'CC Group Name'">{{data.ccgroup_name}}</td>
                                <td data-title="'Action'" class="nowrap">
                                    <button title="Edit" ng-click="edit(data.ccgroupname_gid)" class="btn btn-green">
                                        <em class="fa fa-edit"></em>
                                    </button>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

    <script type="text/ng-template" id="/addccgroup.html">
        <div class="modal-header bg-green-200 ng-scope">

            <h4 id="myModalLabel" class="modal-title">
                &emsp;
                <span class="btn-label bg-green-200">
                    <i class="fa fa-plus "></i>
                </span>ADD CC Member
            </h4>
        </div>
        <div class="modal-body ng-scope">
            <form novalidate="" name="userformsubmit" ng-submit="form.submitForm1()" autocomplete="off" class="form-validate form-horizontal">
                <div class="pd-sm-10">

                    <div class="row ">
                        <div class="col-sm-12 col-sm-12 col-sm-12 ">
                            <div class="row ">
                                <div class="col-sm-12 col-sm-12 col-sm-12 ">
                                    <div class="mda-form-group float-label">
                                       
                                        <input ng-model="txtgroup_code" tabindex="0" maxlength="45" required="" aria-required="true" aria-invalid="true"
                                               class="mda-form-control ng-pristine ng-invalid ng-invalid-required ng-touched" style="">
                                        <label>CC Group Code <span style="color:red">*</span></label>
                                        </div>
                                    </div>
                            </div>
                            <br />
                            <div class="row ">
                                <div class="col-sm-12 col-sm-12 col-sm-12 ">
                                    <div class="mda-form-group float-label">
                                      
                                        <input ng-model="txtgroup_name" tabindex="0" maxlength="45" required="" aria-required="true" aria-invalid="true"
                                               class="mda-form-control ng-pristine ng-invalid ng-invalid-required ng-touched" style="">
                                        <label>CC Group Name <span style="color:red">*</span></label>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <br />
                    <div class="text-center">
                        <button type="button" class="btn btn-success btn-md" ng-disabled="userformsubmit.$invalid" ng-click="ccgroupsubmit()"><i class="fa fa-arrow-circle-right"></i>&nbsp;&nbsp;Submit</button>&nbsp;&nbsp;
                        <button ng-click="ok()" class="btn btn-danger"><i class="fa icon-close"></i>&nbsp;&nbsp;Close</button>
                    </div>
                </div>
            </form>
        </div>
    </script>

    <script type="text/ng-template" id="/editccgroup.html">
        <div class="modal-header bg-green-200 ng-scope">
            <h4 id="myModalLabel" class="modal-title">
                <span class="btn-label bg-green-200">
                    <em class="fa fa-edit"></em>
                 Edit CC Group
                </span>
            </h4>
        </div>
        <div class="modal-body ng-scope">
            <div class="pd-sm-10">
                <div class="row" style="display:none">
                    <div class="col-sm-12 col-sm-12 col-sm-12 ">

                        <div class="mda-form-group">
                            <input ng-model="ccgroupname_gid" required="" rows="2" tabindex="0" aria-required="true" aria-invalid="true" class="mda-form-control ng-pristine ng-invalid ng-invalid-required ng-touched" style="">

                        </div>
                    </div>
                </div>
                <div class="row">
                    <form novalidate="" name="bankdtl" ng-submit="form.submitLoan()" autocomplete="off" class="form-validate mb-lg">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12">
                                <div class="col-sm-12 col-md-12 col-lg-12">
                                    <div class="mda-form-group ">
                                        <input ng-model="txteditccgroup_code" class="mda-form-control ng-pristine ng-valid ng-touched" required>
                                        <label>CC Group Code <span style="color:red">*</span></label>
                                    </div>

                                </div>
                                <div class="col-sm-12 col-md-12 col-lg-12">
                                    <div class="mda-form-group ">
                                        <input type="text" ng-model="txteditccgroup_name" class="mda-form-control ng-pristine ng-valid ng-touched" required />
                                        <label><strong>CC Group Name </strong><span style="color:red">*</span></label>
                                    </div>
                                </div>

                            </div>
                        </div>
                      
                        <div>
                            <br />
                            <div class="text-center">
                                &nbsp;&nbsp;
                                <button ng-click="editccgroup(data.ccgroupname_gid)" ng-disabled="bankdtl.$invalid" class="btn btn-success"><i class="fa fa-check"></i>&nbsp;&nbsp;Update</button>

                                <button ng-click="ok()" class="btn btn-danger"><i class="fa fa-close"></i>&nbsp;&nbsp;Close</button>
                            </div>
                        </div>
                    </form>

                </div>

            </div>

        </div>
    </script>
</div>
