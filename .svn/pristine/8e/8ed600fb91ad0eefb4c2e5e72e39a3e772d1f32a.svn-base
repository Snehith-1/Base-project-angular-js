<h3>
    Role Management
</h3>
<div ng-controller="SysMstRoleSummaryController">
    <div>
        <button type="button" title="Add Role" ng-hide="lsoneapipage=='OneApi'"class="btn btn-primary bt-sm" ng-click="role_add()" >
            <span class="btn-label">
                <i class="fa fa-plus"></i>
                Add Role          
            </span>
        </button>
             
    </div>
    <br/>
    <div id="panelDemo13" class="panel panel-default">
                <div class="panel-body">
                    <table datatable="ng" class="row-border hover">
                        <thead>
                            <tr class="text-white" style="background-color:#09385f;"> 
                              
                                  <th>S.No</th>
                                    <th>One API Code</th>
                                    <th>Role Code</th>
                                    <th>Role Title</th>
                                    <th>Reporting To Role</th>
                                    <th>Probation Period</th>
                                    <th>Job Description</th>
                                    <th>Role Responsible</th>
                                    <th ng-hide="lsoneapipage=='OneApi'">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="data in rolelist">
                               
                               <td data-title="'S.No'"> {{$index+1}} </td>
                               <td data-title="'One API Code'"> {{data.api_code}} </td>
                                <td data-title="'Role Code'">{{data.role_code}}</td>
                                <td data-title="'Role Title'">{{data.role_name}}</td>
                                <td data-title="'Reporting To Role'">{{data.reporting_to}}</td>
                                <td data-title="'Probation Period'">{{data.probation_period}}</td>
                                <td data-title="'Job Description'">{{data.job_description}}</td>
                                <td data-title="'Role Responsible'">{{data.role_responsible}}</td>
                                <td data-title="'Action'" ng-hide="lsoneapipage=='OneApi'"class="nowrap">
                                    <button type="button" class="btn btn-green btn-sm" style="background-color:#3c3abe;" ng-click="role_edit(data.role_gid)" title="Edit">
                                        <em class="fa fa-edit fa-1x"></em>
                                       
                                    </button>
                                    <button title="Delete" ng-click="delete(data.role_gid)" class="btn btn-danger">
                                        <em class="icon icon-trash fa-1x"></em>
                                    </button> 
                                </td>
                            </tr>
                        </tbody>
                        </table>
                        </div>
                      </div>

                </div>

            </div>
   
   
        </div>
