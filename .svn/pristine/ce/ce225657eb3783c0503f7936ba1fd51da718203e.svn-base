<style>
    .tabactivecolorstyle {
        background-color: #84cbdb;
    }
</style>
<h3>
    Customer Summary
</h3>
<div ng-controller="FndMstCustomerMasterController">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="col-lg-10 col-md-10 col-sm-10">
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2">
                <div style="text-align:right;">
                    &nbsp;&nbsp;  <a href="#/app/FndMstCustomerMaster" style="color:#141478;font-size:16px;">
                    </a>
                </div>               
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="col-lg-2 col-md-2 col-sm-2">
                <button type="button" title="Create Customer" style="height:50px;" class="btn btn-info btn-sm" ng-click="addcustomer()">
                    <span class="btn-label">
                        <i class="fa fa-plus"></i>
                    </span>Create Customer
                </button>
            </div>
            <div class="col-lg-2 col-md-6 col-sm-12">
                <button type="button" class="btn btn-labeled" ng-click="pendingcustomerview()" style="width:100%;height:50px;border:1px solid rgb(179, 177, 177);background-color: #84cbdb;">
                    <div class="pull-right label" style="background-color:#838383;padding-top:5px;padding-bottom:5px;"> <b> {{customerpendingView_count}}</b></div>
                    <b style="font-size: 14px;">Pending Customer</b>
                </button>              
            </div>
            <div class="col-lg-2 col-md-6 col-sm-12">
                <button type="button" class="btn btn-labeled" ng-click="approvecustomerview ()" style="width:100%;height:50px;border:1px solid rgb(179, 177, 177);">
                    <div class="pull-right label" style="background-color:#838383;padding-top:5px;padding-bottom:5px;"> <b> {{customerapprovedView_count}}</b></div>
                    <b style="font-size: 14px;">Approved Customer</b>
                </button>
            </div>
            <div class="col-lg-2 col-md-6 col-sm-12">
                <button type="button" class="btn btn-labeled" ng-click="rejectcustomerview ()" style="width:100%;height:50px;border:1px solid rgb(179, 177, 177);">
                    <div class="pull-right label" style="background-color:#838383;padding-top:5px;padding-bottom:5px;"> <b> {{customerrejectedView_count}}</b></div>
                    <b style="font-size: 14px;">Rejected Customer</b>
                </button>
            </div>            
        </div>
    </div>
    <br />
    <br />
    <div class="panel">
        <br />
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="table-responsive">
                        <table datatable="ng" class="table table-hover table-striped">
                            <thead>
                                <tr class="text-white" style="background-color:#09385f;">
                                    <th class="text-center" style="display:none"> S.No </th>
                                    <th> Customer Ref No </th>
                                    <th> Customer Name </th>
                                    <th> Created By</th>
                                    <th> Created Date</th>
                                    <th> Status </th>
                                    <th>Remarks</th>
                                    <th style="text-align: center;">Action</th>
                                </tr>
                            </thead>
                            <tbody>


                                <tr ng-repeat="data in customer_list">
                                    <td data-title="'S.No'" style="display:none" class="text-center">{{$index+1}}</td>
                                    <td data-title="'Customer Code'">{{data.customer_gid}}</td>
                                    <td data-title="'Customer Name'"> {{data.customer_name}} </td>
                                    <td data-title="'Created By'"> {{data.created_by}} </td>
                                    <td data-title="'Created Date'">{{data.created_date}} </td>
                                    <td data-title="'Status'" ng-switch="data.status">
                                        <label class="label label-success" ng-switch-when='Active' style="font-size:10px;">Active</label>
                                        <label class="label label-warning" ng-switch-when='Inactive' style="font-size:10px;">InActive</label>
                                    </td>
                                    <td style="text-decoration:underline;text-decoration-color:#49afcd;">
                                        <label style="padding-right:25px; font-size: 15px;text-decoration:underline;text-decoration-color:#49afcd;"
                                               ng-click="showsPopover(data.customer_gid,data.customer_name)">
                                            <em class="fa fa-info-circle" style="font-size:24px;align-content:center;"></em>
                                        </label>
                                    </td> 
                                    <td class="nowrap" data-title="'Action'" style="text-align: center;" ng-switch="data.status">
                                        <button title="View" ng-click="viewcustomer(data.customer_gid,data.fndmanagement2cheque_gid)" class="btn btn-info">
                                            <em class="fa fa-eye"></em>
                                        </button>
                                        <button title="Edit"   ng-click="editcustomer(data.customer_gid)" class="btn btn-green">
                                            <em class="fa fa-edit"></em>
                                        </button>                           
                                        <button title="Status" ng-switch-when='Active' ng-click="Status_update(data.customer_gid)" class="btn btn-success">
                                            <em class="fa fa-thumbs-up"></em>
                                        </button>
                                        <button title="Status" ng-switch-when='Inactive' ng-click="Status_update(data.customer_gid)" class="btn btn-warning">
                                            <em class="fa fa-thumbs-down"></em>
                                        </button>
                                        <button title="Delete" ng-click="delete(data.customer_gid)" class="btn btn-danger">
                                            <em class="icon icon-trash "></em>
                                        </button>
                                    </td>

                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
    </div>




    <script type="text/ng-template" id="/statuscustomer.html">
        <div class="modal-header bg-primary ng-scope">

            <h4 id="myModalLabel" class="modal-title">
                &emsp;
                <span class="btn-label bg-primary">
                    <i class="fa fa-thumbs-up"></i>
                </span>Status
            </h4>
        </div>
        <div class="modal-body ng-scope">
            <form novalidate="" name="statuscustomer" ng-submit="form.status()" autocomplete="off" class="form-validate form-horizontal">
                <div class="pd-sm-10">
                    <div class="row ">
                        <div class="col-sm-12 col-sm-12 col-sm-12 ">
                            <div class="row ">
                                <div class="col-sm-4 col-sm-4 col-sm-4">
                                    <label> Customer </label>
                                </div>
                                <div class="col-sm-8 col-sm-8 col-sm-8">
                                    {{txtcustomer_name}}
                                </div>

                            </div>
                            <br />
                            <div class="row ">
                                <div class="col-sm-4 col-sm-4 col-sm-4">
                                    <label>Status  </label>
                                </div>
                                <div class="col-sm-8 col-sm-8 col-sm-8">
                                    <div class="radio c-radio">
                                        <label>
                                            <input type="radio" name="rbo_status" value="Y" ng-model="rbo_status" ng-click="status_yes()" />
                                            &nbsp;&nbsp;<span class="fa fa-circle"></span> Active
                                        </label>
                                        <label>
                                            <input type="radio" name="rbo_status" value="N" ng-model="rbo_status" ng-click="status_no()" />
                                            <span class="fa fa-circle"></span> Inactive
                                        </label>
                                    </div>
                                </div>

                            </div>
                            <div class="row ">
                                <div class="col-sm-12 col-sm-12 col-sm-12 ">
                                    <div class="mda-form-group float-label">
                                        <textarea ng-model="txtremarks" style="resize:vertical;" required rows="4" aria-multiline="true" tabindex="0" aria-invalid="false" class="mda-form-control"></textarea>
                                        <label>Remarks *</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div>
                    <br />
                    <div class="text-center">
                        <button type="button" class="btn btn-success btn-md" ng-disabled="!txtremarks" ng-click="update_status()"><i class="fa fa-arrow-circle-right"></i>&nbsp;&nbsp;Submit</button>&nbsp;&nbsp;
                        <button ng-click="ok()" class="btn btn-danger"><i class="fa icon-close"></i>&nbsp;&nbsp;Close</button>
                    </div>
                </div>
                <br />
            </form>
            <br />
            <div class="table-responsive" ng-show="customerstatus_list!=null">
                <div style="max-height:300px;overflow:auto;">
                    <table class="table table-striped table-secondary">
                        <thead class="bg-gray text-white">
                            <tr width="100%">
                                <th align="center" scope="col">S.No</th>
                                <th align="center" scope="col">Status</th>
                                <th align="center" scope="col">Updated By</th>
                                <th align="center" scope="col">Updated Date</th>
                                <th align="center" scope="col">Remarks</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr width="100%" ng-repeat="data in customerstatus_list">
                                <td align="left" scope="col" title="'S.No'">{{$index+1}}</td>
                                <td align="left" scope="col" title="'Status'">{{data.status}} </td>
                                <td align="left" scope="col" title="'Updated By'">{{data.updated_by}}</td>
                                <td align="left" scope="col" title="'Updated Date'">{{data.updated_date}}</td>
                                <td align="left" scope="col" title="'Remarks'">{{data.remarks}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </script>
    <script type="text/ng-template" id="/showremarks.html">

        <div class="panel-body text-center">
            <div class="table-responsive">

                <table class="table hover table-striped row-border">

                    <thead>

                        <tr style="text-align: left;height:40px;">
                            <th style="color:white;background:#7986cb; width:2%;text-align:center;"><i class="fa fa-info-circle" style="text-align: left;">&nbsp; Remarks</i></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>

                            <td style="width:2%; text-align:left"><b> Remarks: </b> <br /></td>
                        </tr>
                        <tr style="text-align: left;height:20px;">
                            <td data-title="'Credit head'" style="width:2%; text-align:left"> {{txteditremarks}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div>
                <div class="text-center">
                    <button ng-click="ok()" class="btn btn-danger"><i class="fa icon-close">&nbsp;&nbsp;</i>Close</button>
                </div>
            </div>
        </div>
    </script>
</div>
