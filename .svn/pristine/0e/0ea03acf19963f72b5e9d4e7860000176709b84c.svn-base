
<div class="limiter" ng-controller="serviceRequestApprovalcontroller">
    <div class="container-login100" style="background-image: url('app/img/test7.jpg');">
        <form name="feedbackform" id="feedbackform" novalidate="" class="form-validate mb-lg" autocomplete="off">

            <div class="row row-table">
                <div class="col-xs-12">
                    <div class="block-center" style="width:550px;">
                        <div class="panel">

                            <div class="text-center col-lg-12 col-sm-12 col-md-12" style="background-color:#4caf50;">
                                <br />
                                <strong style="font-size:22px;color:white;">Approval Form - Request Details </strong>
                                <br /> <br />
                            </div>

                            <div class="text-center">
                                <a href="#">
                                    <img src="app/img/Samunnati Logo.svg" style="height:90px;width:280px;"
                                         alt="Image" class="block-center img-rounded" />

                                </a>
                            </div>
                            <div ng-hide="hideapproval" class="row">
                                <h4 style="text-align: center;">Thank You !</h4>
                                <br />
                                <p style="font-size: 16px;text-align: center;"> If you want to Login <a href="https://one.samunnati.com">click here</a></p>
                                <br />
                            </div>


                            <div ng-show="showapproval">
                                <div id="panelDemo9">
                                    <div class="row">
                                        <div class="col-lg-12 col-sm-12 col-md-12">
                                            <div class="col-lg-3 col-sm-3 col-md-3">
                                                <label style="font-weight:bold">Request Ref No : </label>
                                            </div>
                                            <div class="col-lg-9 col-sm-9 col-md-9">
                                                {{request_refno}}
                                            </div>

                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-lg-12 col-sm-12 col-md-12">
                                            <div class="col-lg-3 col-sm-3 col-md-3">
                                                <label style="font-weight:bold">Activity Name : </label>
                                            </div>
                                            <div class="col-lg-9 col-sm-9 col-md-9">
                                                {{activity_name}}
                                            </div>

                                        </div>
                                    </div>

                                    <br />
                                    <div class="row">
                                        <div class="col-lg-12 col-sm-12 col-md-12">
                                            <div class="col-lg-3 col-sm-3 col-md-3">
                                                <label style="font-weight:bold"> Request Title : </label>
                                            </div>
                                            <div class="col-lg-9 col-sm-9 col-md-9">
                                                {{request_title}}
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-lg-12 col-sm-12 col-md-12">
                                            <div class="col-lg-3 col-sm-3 col-md-3">
                                                <label style="font-weight:bold"> Assigned To : </label>
                                            </div>
                                            <div class="col-lg-9 col-sm-9 col-md-9">
                                                {{assigned_dtl}}
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-lg-12 col-sm-12 col-md-12">
                                            <div class="col-lg-3 col-sm-3 col-md-3">
                                                <label style="font-weight:bold"> Remarks : </label>
                                            </div>
                                            <div class="col-lg-9 col-sm-9 col-md-9">
                                                {{getapproval_remarks}}
                                            </div>
                                        </div>
                                    </div>
                                    <br />

                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12">
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <label><b>Remarks : <span class="text-danger">*</span></b></label>
                                                <textarea ng-model="$parent.txtremarks" class="form-control" />
                                            </div>

                                        </div>
                                    </div>
                                    <br />
                                    <div class="row text-center">
                                        <button class="btn btn-oval btn-lg btn-success" ng-click="approve_submit()" ng-disabled="!txtremarks"
                                                 style="font-size:14px;" type="submit"><i class="fa fa-check"></i>&nbsp; Approve</button>
                                        <button class="btn btn-oval btn-lg btn-danger" ng-disabled="!txtremarks" ng-click="reject_submit()"
                                                 style="font-size:14px;" type="submit"><i class="fa fa-close"></i>&nbsp; Reject</button>
                                    </div>
                                    <br/>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>