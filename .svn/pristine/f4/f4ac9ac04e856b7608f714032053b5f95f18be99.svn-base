
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div ng-controller="testslide as caro" animate-enabled="false">
            <div>
                <carousel interval="caro.myInterval">
                    <slide ng-repeat="slide in caro.slides" active="slide.active">
                        <img ng-src="{{slide.image}}" style="margin: auto;" alt="" />
                        <div class="carousel-caption">
                            <h4>Slide {{$index}}</h4>
                            <p>{{slide.text}}</p>
                        </div>
                    </slide>
                </carousel>
            </div>
        </div>
    </div>
</div>
