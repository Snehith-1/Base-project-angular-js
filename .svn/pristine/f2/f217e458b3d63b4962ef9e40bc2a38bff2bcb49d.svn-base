<h3>
    Remitter Buyers
</h3>
<div class="panel">
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="form-group">
                    <label>Remitter Buyers <span style="color:red">*</span></label>
                    <div class="col">
                        <p class="mda-radio">
                            <input type="radio" name="remitterbuyer" ng-model="cboremitterbuyer" value="Self"
                                   ng-change="selfbuyer()">
                            <em class="bg-teal-500"></em> Self
                        </p>
                    </div>
                    <div class="col">
                        &nbsp; &nbsp;
                    </div>
                    <div class="col">
                        <p class="mda-radio">
                            <input type="radio" name="remitterbuyer" ng-model="cboremitterbuyer" value="Acknowledged buyer"
                                   ng-change="acknowledgedbuyer()">
                            <em class="bg-teal-500"></em> Acknowledged buyer
                        </p>
                    </div>
                    <div class="col">
                        &nbsp; &nbsp;
                    </div>
                    <div class="col">
                        <p class="mda-radio">
                            <input type="radio" name="remitterbuyer" ng-model="cboremitterbuyer" value="Unacknowledged buyer"
                                   ng-change="unacknowledgedbuyer()">
                            <em class="bg-teal-500"></em> Unacknowledged buyer
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" ng-show="showselfbuyer">
            <br />
            <div class="col-lg-12 col-sm-12 col-md-12">
                <p>Customer Name : {{selfcustomername}}</p>
            </div>
        </div>
        <div class="row" ng-show="showacknowledgedbuyer">
            <br />
            <div class="col-lg-12 col-sm-12 col-md-12 form-group float-label">
                <select id="ackbuyersname" name="ackbuyersname" ng-model="acknowledgedbuyers_gid" required=""
                        class="form-control ng-valid ng-touched ng-valid-parse" size="1">
                    <option value=""> Select Acknowledged buyer </option>
                    <option data-ng-repeat="data in acknowledgedbuyers" value="{{data.acknowledgedbuyers_gid}}"
                            style="width:250px;">
                        {{data.acknowledged_buyers}}
                    </option>
                </select>
            </div>
        </div>
        <div class="row" ng-show="showunacknowledgedbuyer">
            <div class="col-lg-12 col-sm-12 col-md-12">
                <div class="mda-form-group float-label">
                    <input ng-model="txtunacknowbuyers" type="text" class="mda-form-control ng-pristine ng-valid ng-touched" required>
                    <label>Unacknowledged buyers <span style="color:red">*</span></label>
                </div>
            </div>
        </div>
        <div class="text-center">
            <button ng-click="addremitterbuyer()" ng-disabled="!cboremitterbuyer" class="btn btn-success">
                <i class="fa fa-check">
                </i>&nbsp;Add
            </button>
            <button ng-click="ok()" class="btn btn-danger">
                <i class="fa fa-close (alias)">
                </i>&nbsp;Cancel
            </button>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-md-12">
                <div class="table-responsive">
                    <table class="row-border hover" id="statictable">
                        <thead>
                            <tr class="bg-primary-light text-white">
                                <th width="3%">S.No</th>
                                <th width="25%">Remitter Buyers</th>
                                <th width="15%">Remitter Status</th>
                                <th width="7%">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="data in remitterbuyerslist">
                                <td data-title="'S.No'">{{$index+1}}</td>
                                <td data-title="Remitter Buyers">{{data.remitter_buyer}}</td>
                                <td data-title="Remitter Status">{{data.remitter_status}}</td>
                                <td>
                                    <!--<button title="Edit" class="btn btn-success btn-sm"
                                        ng-click="editAcknowledgedbuyer(data.acknowledgedbuyers_gid)">
                                    <em class="fa fa-edit"></em>
                                </button>-->
                                    <button title="delete" class="btn btn-danger btn-sm" style="padding: 3px 8px"
                                            ng-click="deleteAcknowledgedbuyer(data.remitterbuyers_gid)">
                                        <em class="fa fa-trash"></em>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
 