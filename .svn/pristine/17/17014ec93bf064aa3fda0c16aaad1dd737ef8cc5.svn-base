<style>
    .tablefix {
        overflow-x: scroll;
        margin-right: 280px;
        overflow-y: visible;
        padding-bottom: 1px;
    }

    .tableleftfix {
        overflow-x: scroll;
        margin-left: 250px;
        overflow-y: visible;
        padding-bottom: 1px;
    }

    .tablefixright {
        overflow-x: scroll;
        margin-left: 240px;
        overflow-y: visible;
        padding-bottom: 1px;
    }
    td,th {
        border: 1px solid #d6dee1;
    }

</style>
<h3>
    Limit Management
</h3>
<div ng-controller="MstLimitManagementViewController">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="panel panel-default">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div style="color: #000000; font-size: 14px; font-weight: bold; background-color: #09385f; color: white; padding-top: 10px; padding-bottom: 10px;">
                            <h5>&nbsp;&nbsp; <em class="fa fa-money" style="font-size: 18px;"></em>&nbsp;&nbsp;{{customer_name}} - {{customer_urn}} </h5>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="table-responsive table-bordered">
                                <table class="table table-striped table-secondary">
                                    <thead class="bg-gray">
                                        <tr class="nowrap" style="color:black;">
                                            <th class="text-center"> Application Details </th>
                                            <th class="text-center"> Product / Sub product </th>
                                            <th class="text-center"> Program</th>
                                            <th class="text-center"> Facility Limit</th>
                                            <th class="text-center"> Facility validity</th>
                                            <th class="text-center"> Tenure</th>
                                            <th class="text-center"> Loan Type</th>
                                            <th class="text-center"> Rate of Interest</th>
                                            <th class="text-center">Margin</th>
                                            <th class="text-center"> Penal Interest </th>
                                            <th class="text-center"> Facility Mode</th>
                                            <th class="text-center"> Principal Frequency</th>
                                            <th class="text-center"> Interest Frequency</th>
                                        </tr>
                                    </thead>
                                    <tbody ng-repeat="item in applicationdtl_list">
                                        <tr>
                                            <td class="nowrap" rowspan="{{item.limitmanagement_list.length}}">
                                                <p><b>ARN : </b> {{item.application_no}}</p>
                                                <p><b>Proposal Type :</b> {{item.facility_type}}</p>
                                                <p><b>Application date : </b> {{item.application_date}}</p>
                                                <p><b>Application status : </b> {{item.application_status}}</p>
                                                <p><b>Overall Limit : </b> {{item.overalllimit_amount}}</p>
                                                <p><b>Sanction validity : </b> {{item.sanctionfrom_date}} <span ng-show="item.sanctionfrom_date!=''"> to </span> {{item.sanctiontill_date}}</p>
                                            </td>
                                            <td style="background-color:#ffffff;">
                                                <p>{{item.limitmanagement_list[0].product_type}} / {{item.limitmanagement_list[0].productsub_type}} </p>
                                            </td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{item.limitmanagement_list[0].program}}</p></td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{item.limitmanagement_list[0].loanfacility_amount}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{item.limitmanagement_list[0].facilityoverall_limit}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{item.limitmanagement_list[0].tenureoverall_limit}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"><p> {{item.limitmanagement_list[0].loan_type}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{item.limitmanagement_list[0].rate_interest}}</p></td>
                                            <td style="background-color:#ffffff;" class="nowrap"><p> {{item.limitmanagement_list[0].roi_margin}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{item.limitmanagement_list[0].penal_interest}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{item.limitmanagement_list[0].facility_mode}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{item.limitmanagement_list[0].principalfrequency_name}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{item.limitmanagement_list[0].interestfrequency_name}}</p> </td>
                                        </tr>
                                        <tr ng-repeat="data in item.limitmanagement_list" ng-if="$index > 0">
                                            <td style="background-color:#ffffff;">
                                                <p>{{data.product_type}} / {{data.productsub_type}}  </p>
                                            </td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{data.program}}</p></td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{data.loanfacility_amount}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"><p> {{data.facilityoverall_limit}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{data.tenureoverall_limit}}</p></td>
                                            <td class="nowrap" style="background-color:#ffffff;"> <p> {{data.loan_type}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"><p> {{data.rate_interest}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"><p> {{data.roi_margin}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{data.penal_interest}}</p></td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{data.facility_mode}}</p> </td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{data.principalfrequency_name}}</p></td>
                                            <td style="background-color:#ffffff;" class="nowrap"> <p> {{data.interestfrequency_name}}</p></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="text-center">
                        <button ng-click="Back()" class="btn btn-info"><i class="fa fa-arrow-circle-left"></i>&nbsp;&nbsp;Back</button>
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>
