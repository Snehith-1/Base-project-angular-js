<h3>
    Employee Details
</h3>
<div ng-controller="isanMstemployeeaddinfoController as dp">

    <div id="panelDemo8" class="panel panel-primary ">
        <div class="panel-heading">
            <span class="btn-label">
                <i class="fa fa-plus"></i>
            </span>Add Employe
        </div>

        <div class="panel-body">
            <div class="row">
                <div class="col-sm-8 col-sm-8 col-sm-8 ">
                        <label>Employee Name </label> <span style="color:red">*</span>
                        <select name="employee" chosen="" ng-options="m.employee_name for m in employee_list" required
                                ng-model="employeegid" class="chosen-select form-control"
                                ng-change="onselectedchangeemployee(employee)">
                            <option value=""> ----Select Employee----</option>
                        </select>
                    
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-sm-8 col-sm-8 col-sm-8 ">
                   
                        <label><strong>Employee Code</strong> <span style="color:red">*</span></label>
                        <input type="text" ng-model="employee_code" maxlength="512" tabindex="0" class="form-control" required
                               id="employee_code">
                    
                </div>
            </div>
            <br />

            <div class="row">
                
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <label><strong>Employee Mail Id</strong> <span style="color:red">*</span></label>
                        <input type="text" ng-model="employee_mailid" maxlength="512" tabindex="0" class="form-control" required
                               id="employee_mailid">
                   
                </div>
            </div>
            <br />

            <div>
                <div class="text-center">
                    <button type="button" class="btn btn-success btn-md" ng-disabled="userform.$invalid" ng-click="employeeSubmit()"><i class="fa fa-arrow-circle-right"></i>&nbsp;&nbsp;Submit</button>&nbsp;&nbsp;
                    <button ng-click="employeeback()" class="btn btn-info"><i class="fa fa-arrow-circle-left"></i>&nbsp;&nbsp;Back</button>
                </div>
            </div>

        </div>

    </div>

</div>