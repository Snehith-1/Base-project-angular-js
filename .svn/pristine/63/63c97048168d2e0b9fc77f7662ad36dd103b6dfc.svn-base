

<div class="limiter" ng-controller="ssoLogin">
    <div class="container-login100" style="background-image: url('app/img/vc14.jpg');">
        <div>
            <div class="row row-table">
                <div class="col-xs-12">
                    <div class="block-center mt-xl wd-xl">
                        <div class="panel bg-blue-grey-50">
                            <br />
                            <div class="text-center">
                                <strong class="text-primary" style="font-size:30px">SIGN IN </strong>
                            </div>
                            <br/>
                            <div class="text-center">
                                <a>
                                    <img alt="app logo" src="app/img/storyboarderp logo.png"  style="height:140%;width:100%"
                                           class="block-center img-rounded" />
                                    
                                </a>
                            </div>
                            <br/>
                            <div class="panel-body">

                                <div class="row">
                                    <div class="col-lg-12 text-center">
                                        <div class="col-lg-12 col-sm-12  col-md-12 p-b-20">
                                            <button class="btn btn-block btn-lg btn-info" ng-click="sso()" title="Login Via Microsoft"
                                                    style="font-size:18px;" type="submit">Login Via Microsoft</button>
                                        </div>
                                        <div class="form-group">
                                            <div ng-show="authMsg" class="alert bg-warning text-center">{{authMsg}}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 