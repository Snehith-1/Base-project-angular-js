<h3>
    Customer Alert
</h3>
<div ng-controller="customerAlertcontroller">

    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12">
            <div class="col-lg-3 col-sm-3 col-md-3">
                <b>
                    Total Customer Count : {{count_customer}}

                </b>
            </div>

            <div class="col-lg-7 col-sm-7 col-md-7">
                <!--<select name="customer" dropzone="" ng-model="customer" ng-change="onselectedchangecustomer(customer)" required=""
                        class="chosen-select form-control" size="1">
                    <option value="">Search</option>
                    <option data-ng-repeat="data in customerlist" value="{{data.customer_gid}}">{{data.customername}}</option>
                </select>-->
                <select id="customer_name" name="customer" chosen="" required ng-model="customer"
                        ng-options="m.customername for m in customerlist" ng-change="onselectedchangecustomer()" 
                        class="chosen-select form-control">
                    <option value=""> ---Select Customer--- </option>
                </select>
            </div>
            <div class="col-lg-2 col-sm-2 col-md-2">
                <button type="button" class="btn btn-green btn-md" style="background-color:#0d87b5;"
                        ng-click="refresh()" title="Refresh">
                    <i class="fa fa-refresh"></i>
                </button>&nbsp;&nbsp;
            </div>

        </div>
    </div>

    <div class="dd-handle ng-scope" ng-repeat="data in customer_list">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">

                <div class="col-lg-6 col-sm-6 col-md-6" style="color :brown ;font-size:130%;font-weight :bold;">
                    {{data.customername}}<label style="font-weight:bold">/</label>{{data.customercode}}

                </div>
                <div class="col-lg-3 col-sm-3 col-md-3">

                </div>


            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="col-lg-2 col-sm-2 col-md-2">
                    <label style="font-weight:bold">Vertical</label>
                </div>
                <div class="col-lg-4 col-sm-4 col-md-4">
                    {{data.vertical_code}}
                </div>
                <div class="col-lg-2 col-sm-2 col-md-2">
                    <label style="font-weight:bold">Zonal Head</label>
                </div>
                <div class="col-lg-4 col-sm-4 col-md-4">
                    {{data.zonalGid}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="col-lg-2 col-sm-2 col-md-2">
                    <label style="font-weight:bold">Business Head</label>
                </div>
                <div class="col-lg-4 col-sm-4 col-md-4">
                    {{data.businessHeadGid}}
                </div>
                <div class="col-lg-2 col-sm-2 col-md-2">
                    <label style="font-weight:bold">Cluster Manager</label>
                </div>
                <div class="col-lg-4 col-sm-4 col-md-4">
                    {{data.clustermanagerGid}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="col-lg-2 col-sm-2 col-md-2">
                    <label style="font-weight:bold">Relationship Manager</label>
                </div>
                <div class="col-lg-4 col-sm-4 col-md-4">
                    {{data.relationshipMgmtGid}}
                </div>
                <div class="col-lg-2 col-sm-2 col-md-2">
                    <label style="font-weight:bold">Credit Manager</label>
                </div>
                <div class="col-lg-4 col-sm-4 col-md-4">
                    {{data.creditmanagerName}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="col-lg-6 col-sm-6 col-md-6">

                </div>
                <div class="col-lg-6 col-sm-6 col-md-6">

                    <!--<button type="button" class="btn btn-primary  btn-sm" ng-click="rdGenerate(data.customer_gid)" ><i class="fa fa-hand-o-right"></i> &nbsp;&nbsp;Generate</button>
                    <button type="button" class="btn btn-green btn-sm" ng-click="mailHistory(data.customer_gid)" ><i class="fa fa-history"></i> &nbsp;&nbsp;History</button>-->

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="col-lg-6 col-sm-6 col-md-6">
                    <div class="text-info">
                        Deferral Details &nbsp;&nbsp;
                        <a ng-hide="data.hide" ng-click="data.hide=true">
                            <button title="Click to View Deferral Details" ng-click="deferraldetails(data.customer_gid,$index)">
                                <em class="fa fa-chevron-circle-down" style="font-size:14px;"></em>
                            </button>
                        </a>
                        <a ng-show="data.hide" ng-click="data.hide=false">
                            <button title="Click to Hide Deferral Details">
                                <em class="fa fa-chevron-circle-up" style="font-size:14px;"></em>
                            </button>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-3 col-md-3">
                </div>
                <div class="col-lg-3 col-sm-3 col-md-3">

                    <button title="Generate" ng-click="rdGenerate(data.customer_gid)" class="btn btn-sm  btn-green">
                        <em class="fa fa-hand-o-right"></em>
                    </button>

                    <button title="History" ng-click="mailHistory(data.customer_gid)" class="btn btn-sm  bg-cyan-A700">
                        <em class="fa fa-history">&nbsp;<label style="color:red;">{{data.mail_count}}</label></em>
                    </button>
                    <!--<div class="label label-pink align-text-top ">{{data.mail_count}}</div>-->
                    <!--<a  style="color:white;" class=" ng-binding ng-scope label label-pink">
                        <em class="fa">{{data.mail_count}}</em>
                    </a>-->
                </div>
            </div>
        </div>


        <div ng-show="data.hide" class="row">
            <div class="col-lg-12 col-sm-12 col-md-12">

                <div id="panelDemo13" class="panel panel-default">
                    <div class="panel-body ">
                        <div class="table-responsive">

                            <table id="statictable" class="row-border hover">
                                <thead>
                                    <tr width="100%" class="bg-success text-white">
                                        <th scope="col">Record ID</th>
                                        <th scope="col">Due Date</th>
                                        <!--<th scope="col">Aging</th>-->
                                        <th scope="col">Tracking Type</th>
                                        <!--<th scope="col">DEFERRAL TYPE</th>-->
                                        <th scope="col">Deferral Category</th>
                                        <th>Sanction Ref No.</th>
                                        <th>Sanction Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="subdata in data[data.customer_gid]" width="100%">
                                        <td title="'Record ID'">{{subdata.record_id}}</td>
                                        <td title="'Due Date'">{{subdata.due_date}}</td>
                                        <!--<td title="'Aging'">{{subdata.aging}}</td>-->
                                        <td title="'Tracking Type">{{subdata.tracking_type}}</td>
                                        <!--<td data-title="'Deferral Type'">{{subdata.deferral_name}}</td>-->
                                        <td data-title="'Deferral Category'">{{subdata.deferral_category}}</td>
                                        <td data-title="Sanction Ref No.">{{subdata.sanction_refno}}</td>
                                        <td data-title="Sanction Date">{{subdata.sanction_date}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
