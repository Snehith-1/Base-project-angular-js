<h3>
    Tier Report - View
</h3>
<div ng-controller="tier3PreparationView">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <em class="fa fa-retweet"></em>&nbsp;  Tier Report - View
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-md-12">
                    <div class="row">

                        <div class="col-lg-4 col-sm-4 col-md-4 form-group">
                            <label>MLRC Date </label>
                            <br />
                            <input type="text" ng-model="mlrc_date" class="form-control" disabled />

                        </div>
                        <div class="col-lg-4 col-sm-4 col-md-4 form-group float-label">
                            <label>Month </label>
                            <br />
                            <input type="text" ng-model="monthname" class="form-control" disabled />

                        </div>
                        <div class="col-lg-4 col-sm-4 col-md-4 form-group float-label">
                            <label>Vertical </label>
                            <br />
                            <input type="text" ng-model="vertical" class="form-control" disabled />

                        </div>
                        
                     
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="table-responsive table-bordered bg-indigo-100">
                                <table class="table">
                                    <thead class="bg-indigo-400">
                                        <tr>
                                            <th>Tier 2 Approved Date</th>
                                            <th>Vertical</th>
                                            <th>Zonal Name</th>
                                            <th>Zonal Risk Manager</th>
                                            <th>Customer URN</th>
                                            <th>Customer Name</th>
                                            <th>Tier Code</th>
                                            <th>Risk Manager</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="data in tierallocationdtl">
                                            <td>{{data.tier2_approveddate}}</td>
                                            <td>{{data.vertical}}</td>
                                            <td>{{data.zonal_name}}</td>
                                            <td>{{data.ZRM_name}}</td>
                                            <td>{{data.customer_urn}}</td>
                                            <td>{{data.customer_name}}</td>
                                            <td>{{data.tier3_code}}</td>
                                            <td>{{data.riskmanager}}</td>
                                            <td>
                                                <button title="Allocation 360" class="btn btn-primary btn-sm"
                                                        ng-click="viewcustomerdtl(data.allocationdtl_gid,data.tier1format_gid)">
                                                    <em class="fa fa-retweet"></em>
                                                </button>
                                                <button title="Risk Code-History" class="btn btn-success btn-sm"
                                                        ng-click="riskcodechange(data.allocationdtl_gid,data.tierallocation_gid,data.customer_name,data.customer_urn,data.tier3_code)">
                                                    <em class="fa fa-history"></em>
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <label> Follow-up Dates: </label>
                            <textarea name="remarks" disabled
                                      ng-model="txttier3_followup" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="row">
                                <br />
                                <div class="col-lg-6 col-sm-6 col-md-6">
                                    <label class="text-primary" style="font-size:16px;">Document Details </label>
                                    <div ui-scroll-viewport="" style="height:245px; overflow-y: auto;" class="row">
                                        <div class="col-lg-12 col-sm-12 col-md-12">
                                            <div class="table-responsive table-bordered bg-indigo-100">
                                                <table class="table">
                                                    <thead class="bg-indigo-500">
                                                        <tr>
                                                            <th>Document Title</th>
                                                            <th>Document Name</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr ng-repeat="upload in uploaddocument_list">
                                                            <td>{{upload.document_title}}</td>
                                                            <td>{{upload.document_name}}</td>
                                                            <td>
                                                                <button title="Download" class="btn btn-default btn-sm"
                                                                        ng-click="downloads(upload.document_path,upload.document_name)">
                                                                    <a download="" href="" id="btnpdf" style="display:none;"></a><em class="fa fa-download"></em>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-sm-6 col-md-6">
                                    <label class="text-primary" style="font-size:16px;">Tier 3 - Completed Details </label>
                                    <div class="list-group-item">
                                        <div class="media-box-body clearfix">
                                            <div class="row">
                                                <div class="col-lg-12 col-sm-12 col-md-12">
                                                    <h4 class="popover-title">{{tier3_status}} On {{completed_date}} by {{completed_by}}</h4>
                                                    <div class="popover-content">
                                                        <p><span class="text-bold">Completed Remarks:</span> {{completed_remarks}}</p>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="class">
                        <div class="text-center">
                            <a class="btn btn-info" href="#/app/tierReport">
                                <em class="fa fa-arrow-left"></em>
                                <span>Back</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
             
        </div>

    </div>

    <script type="text/ng-template" id="/riskcodechangeModal.html">
        <md-toolbar>
            <div class="md-toolbar-tools" style="background-color:rgb(63, 110, 181);">
                <h2><em class="fa fa-history"></em>&nbsp;Risk Code-History </h2>
                <span flex></span>

            </div>
        </md-toolbar>

        <div class="modal-body ng-scope">
            <div class="pd-sm-10">

                <div class="row">
                    <form name="criticalobservationadd" id="criticalobservationadd" novalidate="" class="form-validate mb-lg" autocomplete="off">

                        <div class="col-lg-12 col-sm-12 col-md-12">
                            <div class="row">
                                <div class="col-lg-12 col-sm-12 col-md-12 text-center">
                                    <label class="text-bold" style="font-size:16px;">{{customer_name}} / {{customer_urn}}</label>

                                </div>
                            </div>
                            <div class="row">
                                
                                <div class="col-lg-12 col-md-12 col-sm-12  text-center" ng-switch="cboriskcode">
                                    <label>Risk Code : </label>
                                    <label ng-switch-when="Green" class="label label-success" style="font-size:12px;">Green</label>
                                    <label ng-switch-when="Amber" class="label label-warning">Amber</label>
                                    <label ng-switch-when="Red" class="label label-danger">Red</label>
                                </div>

                            </div>
                             
                            <br />

                            <div class="row">
                                <div class="col-lg-12 col-sm-12 col-md-12">
                                    <div class="table-responsive table-striped table-bordered table-hover">
                                        <table class="table">
                                            <thead class="bg-indigo-100">
                                                <tr>
                                                    <th>Stage</th>
                                                    <th>Risk Code</th>
                                                    <th>Risk Code - Change Reason</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="data in tiercodedtl">
                                                    <td>{{data.tier_stage}}</td>
                                                    <td>{{data.tier_code}}</td>
                                                    <td>{{data.tiercode_changereason}}</td>

                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>

                            <div class="class">
                                <div class="text-center">
                                    <br />
                                    <a class="btn btn-danger" ng-click="ok()">
                                        <em class="fa fa-close"></em>
                                        <span>Close</span>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>

            </div>

        </div>
    </script>
</div>