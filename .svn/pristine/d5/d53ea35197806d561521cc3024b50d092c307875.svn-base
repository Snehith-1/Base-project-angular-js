
<h3>
    Add Credit Group
</h3>
<div ng-controller="MstCreditMappingAddController">
    <div class="panel panel-primary">
        <div class="panel-heading">
            &nbsp;<span class="btn-label bg-primary">
                <i class="fa fa-plus "></i>
            </span> Add Credit Group
        </div>
        <div class="modal-body ng-scope">
            <form novalidate="" name="addcreditgroup" ng-submit="form.addcreditgroup()" autocomplete="off" class="form-validate form-horizontal">

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <!--<div class="row ">-->
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <label class="col-form-label"> Credit Group ID </label>
                            <input type="text" ng-model="txtcreditgroup" tabindex="0" class="form-control" placeholder="Auto Generate" disabled />
                        </div>

                        <!--<br />-->
                        <!--<div class="row ">-->
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <label class="col-form-label"> Credit Group Name <span style="color:red">*</span></label>
                            <input type="text" ng-model="txtcreditgroupname" required tabindex="0" class="form-control" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="row ">
                    <div class="col-sm-12 col-lg-12 col-md-12">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <label>Credit Head  <span style="color:red">*</span></label>
                            <select name="cluster" chosen="" multiple="multiple" tabindex="2"
                                    ng-options="m.employee_name for m in cbocredithead_list" required=""
                                    ng-model="cbocredithead" class="chosen-select form-control"></select>
                        </div>
                        <!--</div>
                        <br />-->
                        <!--<div class="row ">-->
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <label>National Credit Manager  <span style="color:red">*</span></label>
                            <select name="cluster" chosen="" multiple="multiple" tabindex="2"
                                    ng-options="m.employee_name for m in cbonationalmanager_list" required=""
                                    ng-model="cbonationalmanager" class="chosen-select form-control"></select>
                        </div>
                    </div>
                </div>
                <!--</div>-->
                <br />
                <div class="row ">
                    <div class="col-sm-12 col-lg-12 col-md-12">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <label>Regional Credit Manager  <span style="color:red">*</span></label>
                            <select name="cluster" chosen="" multiple="multiple" tabindex="2"
                                    ng-options="m.employee_name for m in cboregionalmanager_list" required=""
                                    ng-model="cboregionalmanager" class="chosen-select form-control"></select>
                        </div>
                        <!--</div>-->
                        <!--<br />-->
                        <!--<div class="row ">-->
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <label>Credit Manager  <span style="color:red">*</span></label>
                            <select name="cluster" chosen="" multiple="multiple" tabindex="2"
                                    ng-options="m.employee_name for m in cbocreditmanager_list" required=""
                                    ng-model="cbocreditmanager" class="chosen-select form-control"></select>
                        </div>
                        <!--</div>-->
                    </div>
                </div>
                <br />


                <!--</div>
                </div>-->

                <div class="text-center">
                    <button type="button" class="btn btn-success btn-md" ng-disabled="addcreditgroup.$invalid" ng-click="submit()"><i class="fa fa-arrow-circle-right"></i>&nbsp;&nbsp;Submit</button>&nbsp;&nbsp;
                    <button ng-click="back()" class="btn btn-info"><i class="fa fa-arrow-circle-left"></i>&nbsp;&nbsp;Back</button>
                </div>

                <br />
            </form>
        </div>
    </div>
</div>   