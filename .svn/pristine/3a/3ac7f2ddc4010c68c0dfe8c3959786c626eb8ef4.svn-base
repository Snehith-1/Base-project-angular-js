            <div class="row">
                <div class="col-lg-12 col-sm-12 col-md-12">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <label class="col-form-label control-label"><strong>Category1 *</strong></label>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3" ng-hide="edit1" ng-show="cancel">
                            <p>{{category_name}}</p>
                        </div>
                        <div class="col-lg-1 col-sm-1 col-md-1" ng-hide="edit1" ng-show="cancel">
                            <button class="btn btn-link btn-default" title="Edit" tabindex="0" ng-click="edit1=!edit1" aria-hidden="false">
                                <em class="fa fa-pencil text-muted text-info"></em>
                            </button>
                        </div>
                        <div ng-show="edit1" ng-hide="cancel">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <select id="employee_name" name="category_name" dropzone="" ng-model="category_gid"
                                        required="" class="mda-form-control">
                                    <option value="">-----Select Category----</option>
                                    <option data-ng-repeat="data in category_list" value="{{data.category_gid}}">{{data.category_name}}</option>
                                </select>
                            </div>
                            <div class="col-lg-1 col-md-1 col-sm-1">
                                <button class="btn btn-link btn-default" title="Update" ng-click="updatecategory(category_gid)">
                                    <em class="fa fa-check text-muted text-success"></em>
                                </button>
                            </div>
                            <div class="col-lg-1 col-md-1 col-sm-1">
                                <button class="btn btn-link btn-default" ng-click="cancel=!cancel" title="Cancel">
                                    <em class="fa fa-remove text-muted text-danger"></em>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="col-lg-3 col-md-3 col-sm-3">
