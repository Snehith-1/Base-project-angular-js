<h3>
    Edit Collateral
</h3>
<div ng-controller="editcollateralcontroller" class="ball-clip-rotate">

    <div id="panelDemo8" class="panel panel-success ">
        <div class="panel-heading">
            <span class="btn-label">
                <i class="fa fa-plus"></i>
            </span>EDIT COLLATERAL
        </div>

        <div class="panel-body">
            <form novalidate="" id="userform" name="userform" ng-submit="form.submitTransfer()" autocomplete="off" class="form-validate mb-lg">
                <div class="modal-body" style="padding-right:40px;">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12 ">
                            <div class="col-lg-12">
                                <label>Customer *</label>
                                <select id="customer" name="customer" ng-change="onselectedchangecustomer(customer)" dropzone="" ng-disabled="true" ng-model="customer" required="" class=" mda-form-control ng-pristine ng-invalid-required ng-valid md-default-theme ng-touched" size="1"
                                        ng-options="customerdata.customer_gid as customerdata.customername for customerdata in customer_list">
                                    <option value="">---Select Customer---</option>

                                </select>
                                <!--<select id="customer" name="customer" dropzone="" ng-model="customer" ng-disabled="true" class="mda-form-control" ng-change="onselectedchangecustomer(customer)" required="">
                                    <option value="">-----Select Customer----</option>
                                    <option data-ng-repeat="data in customer_list" value="{{data.customer_gid}}">{{data.customername}} </option>
                                </select>-->
                            </div>


                        </div>
                    </div>
                    <br />


                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12 ">
                            <div class="col-lg-5">
                                <label>Security Type *</label>
                                <select id="security_type" name="security_type" dropzone="" ng-model="security_type" class="mda-form-control" required="" size="1">
                                    <option value="">-----Select Security Type----</option>
                                    <option data-ng-repeat="data in security_data" value="{{data.securitytype_gid}}">{{data.security_type}} </option>
                                </select>
                            </div>
                            <div class="col-lg-2">

                            </div>
                            <div class="col-lg-5">
                                <label>Account Status *</label>
                                <select name="account_status" id="account_status" dropzone="" ng-model="account_status" required="" class="mda-form-control ng-pristine ng-invalid-required ng-valid md-default-theme ng-touched" size="1">
                                    <option value="">-----Select Account Status----</option>
                                    <option value="Live">Live</option>
                                    <option value="Closed">Closed</option>

                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12 ">
                            <div class="col-lg-12">

                                <md-input-container flex="" class="md-default-theme" style="height: auto;">
                                    <label for="input_13">Security Description * </label>
                                    <textarea ng-model="security_description" required rows="2" md-maxlength="1000" class="ng-valid md-input ng-valid-md-maxlength ng-touched ng-dirty ng-valid-parse"
                                              id="input_13" ng-trim="false" aria-multiline="true" tabindex="0" aria-invalid="true"></textarea>
                                </md-input-container>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-lg-12 col-sm-12">
                            <div class="col-md-12 col-lg-12 col-sm-12">
                                <div class="table-responsive">
                                    <table class="row-border hover" id="statictable">
                                        <thead>
                                            <tr class="bg-success text-white">
                                               
                                                <th>S.NO</th>
                                           
                                                <th>LOAN TITLE</th>
                                                <th>SANCTION REF NO</th>
                                                <th>SANCTION DATE</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="data in loan_data">
                                                <td data-title="'S.No'">{{$index+1}}</td>
                                                <td data-title="'LOAN TITLE'">{{data.loan_title}}</td>
                                                <td data-title="'SANCTION REF NO'">{{data.sanction_refno}}</td>
                                                <td data-title="'SANCTION DATE'">{{data.sanction_date}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-12 col-lg-12 col-md-12 ">
                            <div class="col-lg-12">
                                <div class="ng-scope">
                                    <div class="text-center">
                                        <button type="button" class="btn btn-success btn-md" ng-click="update(collateral_gid)" ng-disabled="userform.$invalid"><i class="fa fa-arrow-circle-right"></i> &nbsp;&nbsp;Update</button>
                                        <button ng-click="back()" class="btn btn-info"><i class="fa fa-arrow-circle-left"></i>&nbsp;&nbsp;Back</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
