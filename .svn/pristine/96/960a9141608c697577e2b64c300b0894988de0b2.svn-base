<div ng-controller="LoginFormController as login" 
      class="container-login100" style="background-image: url('app/img/bg-23.jpg');">
    <div class="row" >
        <br /><br />
        <br /><br /><br />
        <div class="row row-table">
            <div class="col-xs-12">
                <div class="block-center mt-xl wd-xl">
                    <div class="panel">
                        <br />
                        <div class="text-center">                            
                                <img src="app/img/Samunnati Login Logo.svg" style="height:120%;width:90%" 
                                  alt="Image" class="block-center img-rounded"/>
                            
                        </div>
                        <div class="panel-body">
                            <p class="text-center" style="font-size:18px">LOGIN TO CONTINUE</p>

                            <form role="form" ng-submit="login.login()" name="login.loginForm" novalidate="" class="form-validate mb-lg">
                                <div class="form-group has-feedback">
                                    <input id="exampleInputEmail1" type="text" name="user_name" placeholder="Enter UserCode" autocomplete="off" ng-model="login.account.name" required="" tabindex="0" class="form-control" />
                                    <span class="fa fa-user form-control-feedback text-muted"></span>
                                    <span ng-show="login.loginForm.user_name.$dirty &amp;&amp; login.loginForm.user_name.$error.required" class="text-danger">This field is required</span>
                                </div>
                                <div class="form-group has-feedback">
                                    <input id="exampleInputPassword1" type="password" name="account_password" placeholder="Password" ng-model="login.account.password" required="" tabindex="0" class="form-control" />
                                    <span class="fa fa-lock form-control-feedback text-muted"></span>
                                    <span ng-show="login.loginForm.account_password.$dirty &amp;&amp; login.loginForm.account_password.$error.required" class="text-danger">This field is required</span>
                                </div>
                                <button type="submit" class="btn btn-block btn-success mt-lg">Login</button>
                            </form>
                            <div ng-show="login.authMsg" class="alert alert-danger text-center">{{login.authMsg}}</div>
                        </div>
                    </div>
                    <div class="p-lg text-center text-white">
                        <span>&copy;</span>
                        <span ng-bind="app.year"></span>
                        <span>-</span>
                        <span ng-bind="app.name"></span>
                        <br />
                        <span>Samunnati Financial Intermediation & Services Pvt. Ltd.</span>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- START panel-->
    <!-- END panel-->

</div>